{
  "manifest_version": 3,
  "name": "Obsidian Web Clipper",
  "version": "1.0.0",
  "description": "Clip web pages and PDFs to Obsidian",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/readability.js",
        "lib/turndown.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}